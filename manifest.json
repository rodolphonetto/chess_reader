{
  "manifest_version": 3,

  "name": "Chess moves sound",
  "description": "",
  "version": "1.0",

  "action": {
    "default_popup": "index.html",
    "default_icon": {
        "16": "images/icon.png"
    }
},
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.chess.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
        "matches": ["*://www.chess.com/*"],
        "resources": ["audios/*.mp3"]
    }
]
}